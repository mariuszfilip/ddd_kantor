<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Cantor\Domain\Client"
            table="client"
            repository-class="Cantor\Infrastructure\Persistence\Repository\ClientRepositoryDoctrine">
        <id name="_id" type="string" column="id_client" />
        <id name="_name" type="string" column="name"  />
        <id name="_surname" type="string" column="surname"  />
        <id name="_email" type="string" column="email"  />
    </entity>
</doctrine-mapping>